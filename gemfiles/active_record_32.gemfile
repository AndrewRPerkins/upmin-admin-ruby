source 'https://rubygems.org'

gem 'railties', '~> 3.2.3'
gem 'activerecord', '~> 3.2.3', :require => 'active_record'
gem 'rspec-rails', '~> 2.14.1'

# Stick To Versions That Work Under Ruby 1.8 For Now
gem 'capybara', '< 2.1'
gem 'nokogiri', '< 1.6'
gem 'rubyzip', '< 1'
gem 'mime-types', '< 2'

platforms :ruby do
  if RUBY_VERSION > "2.1.0"
    gem 'sqlite3'
  else
    gem 'sqlite3', '1.3.8'
  end
end

gemspec :path => '../'

.form-group{class: attribute.errors? ? "has-error" : ""}
  %label{for: attribute.form_id}
    = attribute.label_name

  - if attribute.editable? && f = form_builder
    - f.object.class.defined_enums[attribute.name.to_s].keys.each do |option|
      .radio
        %label
          = f.radio_button attribute.name, option
          = option.humanize

  - else
    %p.well
      = attribute.value
